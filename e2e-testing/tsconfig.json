{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
    ],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@dydxprotocol-indexer/example-package": ["packages/example-package/src"],
    },
    "baseUrl": ".",
    "outDir": "build",
  },
  "include": [
    "src",
    "__tests__",
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
}
