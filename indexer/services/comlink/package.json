{
  "name": "comlink",
  "version": "0.0.1",
  "description": "",
  "main": "build/index",
  "scripts": {
    "start": "node --heapsnapshot-signal=SIGUSR2 -r dd-trace/init -r dotenv-flow/config build/src/index.js",
    "dev": "node -r dotenv-flow/config build/src/index.js",
    "build": "rm -rf build/ && tsc && pnpm run swagger && pnpm run gen-markdown",
    "build:prod": "pnpm run build",
    "build:watch": "pnpm run build -- --watch",
    "coverage": "pnpm test -- --coverage",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js . --fix",
    "test": "NODE_ENV=test jest --runInBand --forceExit",
    "swagger": "ts-node -r dotenv-flow/config src/scripts/generate-swagger.ts",
    "gen-markdown": "widdershins public/swagger.json -o public/api-documentation.md --omitHeader --user_templates ./templates && ts-node src/scripts/clean-docs.ts"
  },
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@bugsnag/core": "^7.18.0",
    "@bugsnag/js": "^7.18.0",
    "@bugsnag/node": "^7.18.0",
    "@bugsnag/plugin-express": "^7.18.0",
    "@klyraprotocol-indexer/base": "workspace:^0.0.1",
    "@klyraprotocol-indexer/compliance": "workspace:^0.0.1",
    "@klyraprotocol-indexer/postgres": "workspace:^0.0.1",
    "@klyraprotocol-indexer/redis": "workspace:^0.0.1",
    "@klyraprotocol-indexer/v4-proto-parser": "workspace:^0.0.1",
    "@klyraprotocol-indexer/v4-protos": "workspace:^0.0.1",
    "@tsoa/runtime": "^5.0.0",
    "big.js": "^6.2.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dd-trace": "^3.32.1",
    "dotenv-flow": "^3.2.0",
    "dydx-widdershins": "^4.0.1",
    "express": "^4.18.1",
    "express-request-id": "^1.4.0",
    "express-validator": "^6.14.2",
    "lodash": "^4.17.21",
    "luxon": "^3.0.1",
    "nocache": "^3.0.4",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "2.8.0",
    "response-time": "^2.3.2",
    "supertest": "^6.2.4",
    "swagger-ui-express": "^4.6.2",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@klyraprotocol-indexer/dev": "workspace:^0.0.1",
    "@types/big.js": "^6.1.5",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-request-id": "^1.4.0",
    "@types/jest": "^28.1.4",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.0.3",
    "@types/redis": "2.8.27",
    "@types/response-time": "^2.3.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.6.0",
    "jest": "^28.1.2",
